{
  "name": "sarif-explorer",
  "version": "1.0.0",
  "description": "A modern SARIF report viewer that converts SARIF files to interactive HTML reports",
  "main": "dist/index.js",
  "bin": {
    "sarif-explorer": "./cli.js"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.{ts,tsx}",
    "build:css": "npx tailwindcss -i src/generators/styles.css -o dist/generators/styles.css --minify",
    "build:cli": "tsc -p tsconfig.cli.json && npm run build:css && mkdir -p dist/generators && cp src/generators/scripts.js dist/generators/",
    "prepublishOnly": "npm run build:cli",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "keywords": [
    "sarif",
    "static-analysis",
    "security",
    "code-quality",
    "html-report",
    "cli"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "clean-package": "^2.2.0",
    "eslint": "^9",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "files": [
    "cli.js",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sarif-explorer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sarif-explorer/issues"
  },
  "homepage": "https://github.com/yourusername/sarif-explorer#readme"
}
