{
  "name": "sarif-explorer",
  "version": "1.0.0",
  "description": "A modern SARIF report viewer that converts SARIF files to interactive HTML reports",
  "main": "dist/index.js",
  "bin": {
    "sarif-explorer": "./dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.{ts,tsx}",
    "build:cli": "tsc -p tsconfig.cli.json && mkdir -p dist/generators && cp src/generators/styles.css src/generators/scripts.js dist/generators/",
    "prepublishOnly": "npm run build:cli"
  },
  "keywords": [
    "sarif",
    "static-analysis",
    "security",
    "code-quality",
    "html-report",
    "cli"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "@eslint/eslintrc": "^3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sarif-explorer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sarif-explorer/issues"
  },
  "homepage": "https://github.com/yourusername/sarif-explorer#readme"
}
